{
  "manifest_version": 3,
  "name": "LinkedIn Recruiter Reply Helper",
  "version": "0.1.0",
  "description": "Suggests replies for recruiter messages using a local Rust+Ollama backend.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Recruiter Reply Helper"
  }
}